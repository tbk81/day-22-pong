from turtle import Screen
from paddle import CreatePaddle

screen = Screen()
screen.bgcolor("black")
screen.setup(width=800, height=600)
screen.title("PONG")
screen.listen()
paddle = CreatePaddle()
screen.onkey(paddle.move_up, "Up")
screen.onkey(paddle.move_down, "Down")


# game_is_on = True
