from turtle import Turtle


class Ball(Turtle):

    def __init__(self):
        super().__init__()
        self.penup()
        self.shape("circle")
        self.color("white")

    def move(self):
        if 290 > self.ycor():
            new_x = self.xcor() + 10
            new_y = self.ycor() + 10
            self.goto(new_x, new_y)
        # elif self.ycor() > -290:
        #     new_x = self.xcor() + 10
        #     new_y = self.ycor() + 10
        #     self.goto(new_x, new_y)
